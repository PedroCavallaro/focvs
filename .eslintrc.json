{
    "plugins": ["react", "react-native"],
  "extends": ["@rocketseat/eslint-config/react"],
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "newline-before-return": "warn",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "(useCallbackPlus)"
      }
    ]
  }
}
